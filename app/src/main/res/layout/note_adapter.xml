<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/constraint"
    android:layout_marginTop="@dimen/size_3_dp"
    android:elevation="@dimen/size_5_dp"
    android:layout_margin="@dimen/size_10_dp"
    android:padding="@dimen/size_5_dp"
    android:background="@drawable/editbox"
    android:layout_height="wrap_content">

  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textSize="@dimen/font_16_sp"
      android:text="Pharetra Fermentum Elit"
      android:textColor="@color/black"
      android:id="@+id/content" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"/>
  <TextView
      android:text="23 de set"
      android:textSize="@dimen/font_12_sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/date" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
      app:layout_constraintTop_toBottomOf="@+id/content" android:layout_marginTop="24dp"/>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/ic_delete_black_24dp"
      android:id="@+id/trash" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/content"/>

</android.support.constraint.ConstraintLayout>